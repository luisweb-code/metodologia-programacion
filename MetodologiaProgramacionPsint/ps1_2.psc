Proceso ps1_2
	
	//Al ingresar el radio de un circulo calcule area y circunferencia 
	//RADIO variable de tipo real
	
	Definir radio, area, circunferencia como reales;
	
	
	Escribir "Ecribir el radio del circulo";
	leer radio;
	
	//area de calculos
	area <- (radio * radio) * pi;
	circunferencia <- 2 * pi * radio;
	
	// area de publicacion de resultados
	Escribir "Area Total: ", area;
	Escribir  "Circunferencia Total: ", circunferencia;
	
	
	
FinProceso
