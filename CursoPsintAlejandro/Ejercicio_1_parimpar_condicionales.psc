Proceso ejercicio1_condicionales
	
	//Ingrese un número entero y reportar si es par o impar
	//(Pseudocodigo)
	
	//Definir las variables
	Definir num como entero;
	
	//Instrucciones al usuario
	Escribir "Ingresar un numero entero: ";
	Leer num;
	
	//Condición
	si (num % 2 = 0) Entonces
		Escribir "Numero es Par";
	sino 
		Escribir "Numero es Impar";
	FinSi
	
	
	
FinProceso
